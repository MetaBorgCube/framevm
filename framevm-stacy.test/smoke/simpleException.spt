module smoke_exception

language framevm-stacy

test Simple exception example RISC [[MAIN:
	new
	dup
	link [] P
	cnew MAIN_TRY 3
	new
	dup
	link [] P
	cnew MAIN_CATCH 3
	try MAIN_END
	
MAIN_TRY:
	new 1
	dup
	link [P] P
	dup
	ipush 1
	setr [0]
	throw
	
MAIN_CATCH:
	rget
	getr [0]
	print
	cret [n]
	
MAIN_END:
	ipush 0
	print
	ipush 0
	return
]] transform "Run -> RISC" to "1
0"

