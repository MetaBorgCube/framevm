]] transform "Run -> Run" to "IntV(2)"

test 2 & 2 [[
	r0 <- andi(iload(2), iload(2))
]] transform "Run -> Run" to "IntV(2)"

test 3 & 4 [[
	r0 <- andi(iload(3), iload(4))
]] transform "Run -> Run" to "IntV(0)"




