// Composite expressions
// ---------------------

test 1 + (2 * 3) [[
	r0 <- addi(iload(1), muli(iload(2), iload(3)))
]] transform "Run -> Run" to "IntV(7)"

test 1 + (2 * -3) [[
	r0 <- addi(iload(1), muli(iload(2), negi(iload(3))))
]] transform "Run -> Run" to "IntV(-5)"
